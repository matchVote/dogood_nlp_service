#!/bin/bash

REGION=us-east-1
ENV=$1
IMAGE_NAME=nlp-service-fargate

if [ -z "$ENV" ]; then
  echo "Environment argument missing"
  exit 1
fi

TARGET_IMAGE=788332838494.dkr.ecr.$REGION.amazonaws.com/$IMAGE_NAME:latest
SOURCE_IMAGE=$IMAGE_NAME:latest

# Login to AWS EC2 Container Registry
$(aws ecr get-login --no-include-email)

echo "Building image..."
docker build -t $SOURCE_IMAGE .
docker tag $SOURCE_IMAGE $TARGET_IMAGE

echo "Pushing image..."
docker push $TARGET_IMAGE

echo "Deployment successful"
